<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="primary_heavy_text_style" parent="Theme.MyApp">
        <item name="fontWeight">@dimen/primary_font_weight</item>
    </style>

    <style name="primary_light_text_style" parent="Theme.MyApp">
        <item name="fontWeight">@dimen/smaller_font_weight</item>
    </style>

    <style name="title_text_style" parent="primary_heavy_text_style">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/primary_brightest_text_font</item>
    </style>

    <style name="smallest_text_style" parent="@style/primary_light_text_style">
        <item name ="android:textSize">@dimen/smallest_text_size</item>
        <item name="android:textColor">@color/primary_brightest_text_font</item>
    </style>

    <style name="small_text_style" parent="@style/primary_light_text_style">
        <item name ="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/primary_brightest_text_font</item>
    </style>

    <style name="light_medium_text_style" parent="primary_heavy_text_style">
        <item name = "android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/primary_bright_text_font</item>
    </style>

    <style name="lightest_medium_text_style" parent="primary_heavy_text_style">
        <item name = "android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/the_brightest_font</item>
    </style>

    <style name="log_in_fill_text" parent="primary_heavy_text_style">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/primary_brightest_text_font</item>
        <item name="backgroundTint">@color/log_in_line_color</item>
    </style>

    <style name="primary_button_style" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="fontWeight">@dimen/primary_font_weight</item>
    </style>

    <style name="text_big_button_style" parent="primary_button_style">
        <item name="android:textSize">@dimen/big_button_text_size</item>
        <item name="android:letterSpacing">@dimen/space_letters</item>
    </style>

    <style name="log_out_button_style" parent="primary_button_style">
        <item name="android:background">@drawable/button_logout</item>
        <item name="android:textColor">@color/primary_bright_text_font</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="edit_profile_button_style" parent ="primary_button_style" >
        <item name="android:background">@drawable/button_edit</item>
        <item name="android:textColor">@color/primary_background</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name = "social_network_style" parent="Theme.MyApp">
        <item name="android:backgroundTint">@color/social_network_color</item>
        <item name="android:foregroundTint">@color/social_network_color</item>
    </style>

    <style name="contacts_button_style" parent="text_big_button_style">
        <item name="android:background">@drawable/button_contacts</item>
        <item name="android:textColor">@color/the_brightest_font</item>
    </style>
    <style name="google_button_style" parent="@style/Theme.MaterialComponents">
        <item name="android:backgroundTint">@color/button_google_background</item>
        <item name="android:shape">oval</item>

        <item name="iconTint">@color/invisible</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTintMode">add</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>

        <item name="android:textColor">@color/primary_dark_text_font</item>
        <item name="fontWeight">@dimen/primary_font_weight</item>
        <item name="android:textSize">@dimen/big_button_text_size</item>
        <item name="android:letterSpacing">@dimen/space_letters</item>
    </style>


    <style name="register_button_style" parent="text_big_button_style">
        <item name="android:background">@drawable/button_register</item>
        <item name="android:textColor">@color/primary_brightest_text_font</item>
    </style>


    <style name="hint_style" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="error_style" parent="@style/TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/smallest_text_size</item>
        <item name="fontWeight">@dimen/smaller_font_weight</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">@color/error_color</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TextInputLayout_style" parent="Theme.MyApp">
        <item name="expandedHintEnabled">false</item>
        <item name="hintTextAppearance">@style/hint_style</item>
        <!-- without hintTextColor become black when textInputLayout is focused  -->
        <item name="hintTextColor">@color/primary_bright_text_font</item>
        <item name="android:textColorHint">@color/primary_bright_text_font</item>
        <item name="errorEnabled">true</item>
        <item name ="errorTextAppearance">@style/error_style</item>
    </style>

</resources>