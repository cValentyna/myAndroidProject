<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- default styles for different fontWeights api under 26   -->
    <style name="primary_text_style" >
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>
    <style name="primary_light_text_style" parent="Theme.MyApp">
        <item name="fontFamily">@font/open_sans</item>
    </style>

<!--    textViews-->
    <style name="textAppearance_title_text" parent="primary_text_style">
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:textColor">@color/primary_brightest_text_font</item>
    </style>

    <style name="textAppearance_log_in_fill_text" parent="primary_text_style">
        <item name="android:textSize">@dimen/textsize_big</item>
        <item name="android:textColor">@color/primary_brightest_text_font</item>
    </style>

    <style name="light_medium_text_style" parent="primary_text_style">
        <item name = "android:textSize">@dimen/textsize_medium</item>
        <item name="android:textColor">@color/primary_bright_text_font</item>
    </style>

    <style name="text_big_button_style" parent="primary_text_style" >
        <item name="android:textSize">@dimen/textsize_big_button</item>
        <item name="android:letterSpacing">@dimen/space_letters</item>
    </style>

    <style name="TextAppearance_bt_log_out" parent="primary_text_style">
        <item name="android:textColor">@color/primary_bright_text_font</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>

    <style name="TextAppearance_bt_edit_profile" parent="primary_text_style">
        <item name="android:textColor">@color/primary_background</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>

    <style name="TextAppearance_bt_contact" parent="text_big_button_style">
        <item name="android:textColor">@color/the_brightest_font</item>
    </style>
<!-- style for image frame   -->
    <style name="ShapeAppearance_image" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>





